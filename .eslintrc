{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react",
    "prettier/standard",
    "prettier/react",
    "plugin:react/recommended",
    "airbnb"
  ],
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "legacyDecorators": true,
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "16"
    }
  },
  "rules": {
    "space-before-function-paren": 0,
    "react/prop-types": 0,
    "react/jsx-handler-names": 0,
    "react/jsx-fragments": 0,
    "react/no-unused-prop-types": 0,
    "import/export": 0,
    "semi": ["error", "always"],
    "import/no-unresolved": 0,
    "implicit-arrow-linebreak": 0,
    "quotes": ["error", "single"]
  }
}
